@model IEnumerable<SchedulerMVC.Models.Plan>

@{
    ViewBag.Title = "TodayNote";
}

<h2>Сегодняшние заметки</h2>

<table class="table table-striped">
    <tr>
        <th>
            Note
        </th>
        <th>
            Date
        </th>
        <th></th>
    </tr>
    @if (Model.ToList().Count == 0 || Model.ToList() == null)
    {
        <tr>
            <td class="text-muted font-weight-lighter" colspan="3" style="text-align: center">Список пуст</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td class="notewidth">
                    @item.Note
                </td>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Plans", new { id = item.Id })" type="button" class="btn btn-default">Редактировать</a>
                    <a href="@Url.Action("Delete", "Plans", new { id = item.Id })" type="button" class="btn btn-default">Удалить</a>
                </td>
            </tr>
        }
    }

</table>
