@model SchedulerMVC.Models.Plan

@{
    ViewBag.Title = "Edit";
}

<h2>Редактирование заметки</h2>


@using (Html.BeginForm())
{
    
<div class="form-horizontal">
    <h4></h4>
    <hr />
    <div class="text-danger" data-valmsg-summary="true"></div>
    <div class="form-group">
        <label for="Note" class="control-label col-md-2">Note</label>
        <div class="col-md-10">
            
            <textarea class="text-area text-box single-line input-validation-error" data-val="true" data-val-required="Пожалуйста введите заметку." 
                          id="Note" name="Note" value aria-describedby="Note-error" aria-invalid="true">@Model.Note</textarea>
            <span class="text-danger field-validation-error" data-valmsg-for="Note" data-valmsg-replace="true"></span>
        </div>
    </div>

    <div class="form-group">
        <label for="Date" class="control-label col-md-2">Date</label>
        <div class="col-md-10">
            <input class="form-control text-box single-line input-validation-error datewidth" data-val="true" data-val-required="Пожалуйста введите дату."
                   id="Date" name="Date" type="date" aria-describedby="Date-error" aria-invalid="true">
            <span class="text-danger field-validation-error" data-valmsg-for="Date" data-valmsg-replace="true"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
            <a href="/Plans/AllNote" type="button" class="btn btn-default">Вернутся к списку</a>
        </div>
    </div>
</div>
}
<hr />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
